---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout title={`${project.data.title} | Projects`}>
  <article class="container mx-auto px-6 py-12 max-w-4xl">
    <header class="mb-12">
        <a href="/projects" class="text-sm text-slate-400 hover:text-white mb-8 inline-block">‚Üê Back to Projects</a>
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">
            {project.data.title}
        </h1>
        <p class="text-xl text-slate-300">
            {project.data.description}
        </p>
    </header>

    <div class="glass-card p-8 md:p-12 prose prose-invert prose-lg max-w-none">
      <Content />
    </div>
  </article>
</Layout>
