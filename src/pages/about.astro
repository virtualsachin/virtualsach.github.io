---
import Layout from '../layouts/Layout.astro';
import Timeline from '../components/Timeline.astro';
import { getEntry } from 'astro:content';

const entry = await getEntry('pages', 'about');
if (!entry) throw new Error('About page not found');

const { Content } = await entry.render();
---

<Layout title={entry.data.title}>
  <main class="container mx-auto px-6 py-12 max-w-5xl">
    {/* Decorative Background Elements */}
    <div class="fixed top-20 left-10 w-72 h-72 bg-blue-500/10 rounded-full blur-3xl -z-10"></div>
    <div class="fixed bottom-20 right-10 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl -z-10"></div>

    <div class="about-content max-w-none">
      <Content />
    </div>

    <div class="mt-20">
        <h2 class="text-3xl font-bold mb-10 text-center">The <span class="text-gradient">Journey</span></h2>
        <Timeline />
    </div>
  </main>
</Layout>
