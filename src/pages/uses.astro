---
import Layout from "../layouts/Layout.astro";
import { getEntry } from "astro:content";

const entry = await getEntry("pages", "uses");
const { Content } = await entry.render();
---

<Layout title={entry.data.title} description={entry.data.description}>
    <div class="container mx-auto px-6 py-20 relative">
        <!-- Abstract Background Orbs -->
        <div
            class="fixed top-20 right-10 w-72 h-72 bg-purple-500/10 rounded-full blur-3xl -z-10 animate-pulse"
        >
        </div>
        <div
            class="fixed bottom-20 left-10 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl -z-10 animate-pulse delay-700"
        >
        </div>

        <article class="max-w-4xl mx-auto">
            <h1 class="text-5xl md:text-6xl font-extrabold mb-8 leading-tight">
                My <span class="text-gradient">Toolkit</span>
            </h1>

            <div class="prose prose-invert prose-lg max-w-none about-content">
                <Content />
            </div>
        </article>
    </div>
</Layout>
