---
import Layout from "../layouts/Layout.astro";
import ExecutiveStatusBar from "../components/ExecutiveStatusBar.astro";
import PurposeSection from "../components/PurposeSection.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("insights"))
	.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
	.slice(0, 3);

const projects = (await getCollection("projects"))
	.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
	.slice(0, 2);
---

<Layout title="VirtualSach.in - Cloud Architect & Systems Thinker">
	<section
		class="relative overflow-hidden flex items-center justify-center min-h-[65vh] text-center px-6"
	>
		<!-- Background Decor -->
		<div
			class="absolute top-1/4 left-1/4 w-64 h-64 bg-blue-500/20 rounded-full blur-[100px] -z-10 animate-pulse"
		>
		</div>
		<div
			class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500/20 rounded-full blur-[100px] -z-10 animate-pulse delay-700"
		>
		</div>

		<div class="max-w-4xl mx-auto">
			<h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
				I Turn Technical Debt Into <span class="text-gradient"
					>Business Velocity</span
				>.
			</h1>
			<p
				class="text-xl md:text-2xl text-slate-400 mb-10 max-w-2xl mx-auto"
			>
				Architecting resilient cloud systems, automating the boring
				stuff, and fixing the infrastructure that keeps you up at night.
			</p>

			<!-- Executive Profile Strip -->
			<div
				class="flex flex-wrap justify-center items-center gap-6 md:gap-12 text-sm font-medium text-slate-400 mb-10 border-y border-white/5 py-4 bg-white/[0.02]"
			>
				<div class="flex items-center gap-2">
					<span class="text-blue-400">‚ö°</span>
					<span>20+ Years Exp.</span>
				</div>
				<div class="flex items-center gap-2">
					<span class="text-blue-400">üìç</span>
					<span>Bangalore, IN</span>
				</div>
				<div class="flex items-center gap-2">
					<span class="text-blue-400">üíº</span>
					<span>Associate Director</span>
				</div>
				<div class="hidden md:flex items-center gap-2">
					<span class="text-blue-400">üõ†Ô∏è</span>
					<span
						class="bg-blue-500/10 text-blue-300 px-2 py-0.5 rounded text-xs border border-blue-500/20"
						>Azure</span
					>
					<span
						class="bg-blue-500/10 text-blue-300 px-2 py-0.5 rounded text-xs border border-blue-500/20"
						>NSX-T</span
					>
					<span
						class="bg-blue-500/10 text-blue-300 px-2 py-0.5 rounded text-xs border border-blue-500/20"
						>Terraform</span
					>
				</div>
			</div>
			<div class="flex flex-wrap justify-center gap-4">
				<a
					href="/projects"
					class="px-8 py-3 rounded-full bg-blue-600 hover:bg-blue-500 text-white font-semibold transition-all hover:scale-105 shadow-lg shadow-blue-500/25"
				>
					View Projects
				</a>
				<a
					href="/about"
					class="px-8 py-3 rounded-full glass hover:bg-white/10 font-semibold transition-all"
				>
					About Me ‚Üí
				</a>
			</div>
		</div>
	</section>

	<ExecutiveStatusBar />
	<PurposeSection />

	<!-- Latest Insights -->
	<section class="container mx-auto px-6 py-20">
		<div class="flex justify-between items-end mb-12">
			<div>
				<h2 class="text-3xl font-bold mb-4">
					Latest <span class="text-gradient">Insights</span>
				</h2>
				<p class="text-slate-400 max-w-2xl">
					War stories and architectural patterns from the field.
				</p>
			</div>
			<a
				href="/insights"
				class="hidden md:flex items-center gap-2 text-blue-400 hover:text-blue-300 transition-colors group"
			>
				View all insights
				<span
					class="transform group-hover:translate-x-1 transition-transform"
					>‚Üí</span
				>
			</a>
		</div>
		<div class="grid md:grid-cols-3 gap-8">
			{
				posts.map((post) => (
					<article class="glass-card p-6 flex flex-col h-full hover:border-blue-500/30 transition-colors">
						<div class="text-sm text-blue-400 mb-2">
							{post.data.date.toLocaleDateString("en-US", {
								month: "short",
								day: "numeric",
								year: "numeric",
							})}
						</div>
						<h3 class="text-xl font-bold mb-3">
							<a
								href={`/insights/${post.slug}`}
								class="block text-xl font-bold mb-3 hover:text-blue-400 transition-colors"
							>
								{post.data.title}
							</a>
							<p class="text-slate-400 mb-4 line-clamp-3">
								{post.data.description}
							</p>
							<a
								href={`/insights/${post.slug}`}
								class="inline-block text-blue-400 hover:text-white transition-colors text-sm font-medium"
							>
								Read Article ‚Üí
							</a>
						</h3>
					</article>
				))
			}
		</div>
	</section>

	<!-- Featured Projects -->
	<section class="container mx-auto px-6 py-20 border-t border-white/5">
		<div class="flex justify-between items-end mb-10">
			<div>
				<h2 class="text-3xl font-bold mb-2">
					Selected Case Studies & <span class="text-gradient"
						>Outcomes</span
					>
				</h2>
			</div>
			<a
				href="/projects"
				class="text-blue-400 hover:text-white transition-colors text-sm font-medium"
				>View All Projects ‚Üí</a
			>
		</div>

		<div class="grid md:grid-cols-2 gap-8">
			{
				projects.map((project) => (
					<a
						href={`/projects/${project.slug}`}
						class="glass-card p-8 block group hover:bg-white/5 transition-all"
					>
						<h3 class="text-2xl font-bold mb-1 group-hover:text-blue-400 transition-colors">
							{project.data.title}
						</h3>
						{project.data.role && (
							<div class="text-xs font-bold text-blue-400 mb-3 uppercase tracking-wider">
								{project.data.role}
							</div>
						)}
						{project.data.role && (
							<div class="text-xs font-bold text-blue-400 mb-3 uppercase tracking-wider">
								{project.data.role}
							</div>
						)}
						<p class="text-slate-400 mb-6">
							{project.data.description}
						</p>
						<div class="flex flex-wrap gap-2">
							{project.data.tags?.map((tag) => (
								<span class="text-xs px-2 py-1 rounded-full border border-slate-700 bg-slate-800/50 text-slate-300">
									{tag}
								</span>
							))}
						</div>
					</a>
				))
			}
		</div>
	</section>
</Layout>
